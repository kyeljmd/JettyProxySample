<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0">
 
	<display-name>ApacheCXFProxyClient</display-name>
		<servlet>
			<servlet-name>GoogleProxy</servlet-name>
			<servlet-class>org.eclipse.jetty.servlets.ProxyServlet</servlet-class>
			<load-on-startup>1</load-on-startup>
			<init-param>
			  <param-name>ProxyTo</param-name><param-value>http://www.google.com</param-value>
			</init-param>
			<init-param>
			  <param-name>Prefix</param-name><param-value>/google</param-value>
			</init-param>
		  </servlet>
		   
		  <servlet-mapping>
			<servlet-name>GoogleProxy</servlet-name>
			<url-pattern>/google/*</url-pattern>
		  </servlet-mapping>  
</web-app>